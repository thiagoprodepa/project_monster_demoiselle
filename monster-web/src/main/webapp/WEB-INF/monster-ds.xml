<!-- Jboss 6 -->
<datasources>
  <xa-datasource>
    <jndi-name>projectMonsterDS</jndi-name>
    <xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
    <xa-datasource-property name="ServerName">localhost</xa-datasource-property>
    <xa-datasource-property name="PortNumber">5432</xa-datasource-property>
    <xa-datasource-property name="DatabaseName">project_monster</xa-datasource-property>
    <xa-datasource-property name="User">monster_apl</xa-datasource-property>
    <xa-datasource-property name="Password">123456</xa-datasource-property>
    <track-connection-by-tx/>
  </xa-datasource>
</datasources>

